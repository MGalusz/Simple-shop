@model Simple_shop.Models.Kurs
@using MvcSiteMapProvider.Web.Html
@using Simple_shop.Infrastructure

@{
    ViewBag.Title = "Sczegoly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="ListaKategoriZawartosc">

    @Html.Action("KategorieMenu")

    <div id="KategorieListPrawaSekcja">
        <div id="Breadcrumb">
            <img src="../Content/Images/dommaly.png" />
            <a href="link">
                @Html.MvcSiteMap().SiteMapPath()
            </a>
        </div>
        <section id="SekcjaKurs">
            <div id="KursLewa">
                <img src="@Url.ObrazkiiiSciezka(Model.NazwaPlikuObrazka)" />
            </div>
            <div id="KursPrawa">
                <div id="KursNazwa">
                    <h1>
                        @Model.TytulKursu
                    </h1>
                    <h2>
                        @Model.AutorKursu
                    </h2>
                </div>
                <div id="KursCena">
                    <div>
                        @string.Format("{0:0.##}", Model.CenaKursu)<span>PLN</span>
                    </div>
                    <a href="@Url.Action("DodajDoKoszyka", "Koszyk", new {id = Model.KursId})"></a>
                </div>
                <div id="KursOpis">
                    @Model.OpisKursu
                </div>
                <div id="KursInfo">
                    @Model.OpisSkrocony
                    </div>

                </div>
            </section>
        </div>

</div>
